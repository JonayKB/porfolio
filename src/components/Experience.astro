<section
    id="experience"
    class="snap-start h-screen relative flex items-center bg-[#030303] overflow-hidden"
>
    <div
        class="absolute left-[10%] top-0 w-[1px] h-full bg-gradient-to-b from-transparent via-white/20 to-transparent pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-6 md:px-12 relative z-10">
        <div
            class="opacity-0 translate-y-10 transition-all duration-1000 ease-out flex flex-col md:flex-row gap-16 items-center md:items-start"
            data-animate
        >
            <div class="shrink-0 relative group">
                <span
                    class="text-[10rem] md:text-[15rem] font-black leading-none tracking-tighter text-transparent select-none transition-all duration-700 group-hover:opacity-30"
                    style="-webkit-text-stroke: 1px rgba(255,255,255,0.2)"
                >
                    2025
                </span>
                <div class="absolute inset-0 flex items-center justify-center">
                    <span
                        class="text-indigo-500 font-mono text-xl md:text-2xl rotate-90 tracking-widest uppercase"
                        >Malta</span
                    >
                </div>
            </div>

            <div class="max-w-3xl">
                <div class="mb-4 flex items-center gap-4">
                    <span
                        data-i18n="exp_title"
                        class="px-3 py-1 rounded-full border border-indigo-500/30 bg-indigo-500/10 text-xs font-mono text-indigo-300 uppercase tracking-widest"
                    >
                        Experiencia Laboral
                    </span>
                    <span
                        data-i18n="exp_date"
                        class="text-gray-500 font-mono text-xs"
                    >
                        17/03 - 16/05
                    </span>
                </div>

                <h2
                    data-i18n="exp_company"
                    class="text-4xl md:text-6xl font-black tracking-tighter text-white mb-2 leading-tight"
                >
                    Emergency Rescue & Response Corps
                </h2>
                <h3
                    data-i18n="exp_role"
                    class="text-xl md:text-2xl text-indigo-400 font-medium mb-8 uppercase tracking-wide"
                >
                    Desarrollador Web Frontend
                </h3>

                <ul class="space-y-4">
                    {
                        [
                            "exp_item1",
                            "exp_item2",
                            "exp_item3",
                            "exp_item4",
                            "exp_item5",
                        ].map((key) => (
                            <li class="flex items-start gap-3 group">
                                <span class="mt-2.5 w-1.5 h-1.5 rounded-full bg-indigo-500 group-hover:scale-150 transition-transform" />
                                <p
                                    data-i18n={key}
                                    class="text-gray-400 group-hover:text-gray-200 transition-colors leading-relaxed tracking-wide"
                                />
                            </li>
                        ))
                    }
                </ul>

                <div class="mt-10 flex gap-3">
                    {
                        ["React", "Git Flow", "Deployment"].map((skill) => (
                            <span class="px-4 py-2 bg-white/5 border border-white/10 rounded-lg text-xs font-bold text-gray-300 uppercase tracking-tighter hover:bg-white/10 transition-colors cursor-default">
                                {skill}
                            </span>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>

    <div
        class="absolute -bottom-20 -right-20 w-96 h-96 bg-indigo-600/10 blur-[120px] rounded-full"
    >
    </div>
    <div
        class="absolute top-0 left-0 w-64 h-64 bg-purple-600/5 blur-[100px] rounded-full"
    >
    </div>
</section>
