<style>
    @keyframes scroll-line {
        0% {
            transform: scaleY(0);
            transform-origin: top;
            opacity: 0;
        }
        50% {
            transform: scaleY(1);
            transform-origin: top;
            opacity: 1;
        }
        51% {
            transform: scaleY(1);
            transform-origin: bottom;
            opacity: 1;
        }
        100% {
            transform: scaleY(0);
            transform-origin: bottom;
            opacity: 0;
        }
    }

    .animate-scroll-line {
        animation: scroll-line 2.5s cubic-bezier(0.7, 0, 0.3, 1) infinite;
        will-change: transform; /* Optimización para GPU */
    }

    /* Estado abierto del Dropdown en móvil */
    #nav-menu.is-open {
        opacity: 1;
        scale: 1;
        transform: translateY(4px);
        pointer-events: auto;
    }

    /* Rotación de la flecha */
    .nav-menu-active .icon-arrow {
        transform: rotate(180deg);
    }

    /* Ajuste para que los links no se vean pegados en móvil */
    @media (max-width: 639px) {
        .nav-link {
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }
        .nav-link:last-child {
            border-bottom: none;
        }
    }
</style>

<script is:inline>
    const setupDropdown = () => {
        const toggle = document.getElementById('nav-menu-toggle');
        const menu = document.getElementById('nav-menu');
        const links = document.querySelectorAll('.nav-link');

        if (!toggle || !menu) return;

        toggle.onclick = (e) => {
            e.stopPropagation();
            const isOpen = menu.classList.toggle('is-open');
            toggle.classList.toggle('nav-menu-active');
        };

        // Cerrar al hacer click en un link
        links.forEach(link => {
            link.onclick = () => {
                menu.classList.remove('is-open');
                toggle.classList.remove('nav-menu-active');
            };
        });

        // Cerrar si haces click fuera del menú
        document.addEventListener('click', (e) => {
            if (!menu.contains(e.target) && !toggle.contains(e.target)) {
                menu.classList.remove('is-open');
                toggle.classList.remove('menu-active');
            }
        });
    }

    document.addEventListener('DOMContentLoaded', setupDropdown);
    document.addEventListener('astro:page-load', setupDropdown);
</script>
