---
import LanguageSwitcher from "../components/LanguagePicker.astro";
---

<LanguageSwitcher />
<section
    id="start"
    class="snap-start h-screen relative flex items-center overflow-hidden bg-[#030303]"
>
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div
            class="absolute -top-[10%] -left-[10%] w-[40%] h-[40%] bg-indigo-600/20 blur-[120px] rounded-full"
        >
        </div>
        <div
            class="absolute -bottom-[10%] -right-[10%] w-[50%] h-[50%] bg-purple-600/15 blur-[140px] rounded-full"
        >
        </div>
        <div
            class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 brightness-100 contrast-150"
        >
        </div>
    </div>

    <div
        class="relative z-10 container mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 px-6 md:px-12"
    >
        <div
            class="opacity-0 translate-y-12 transition-all duration-1000 ease-[cubic-bezier(0.22,1,0.36,1)]"
            data-animate
        >
            <div
                class="inline-block px-3 py-1 mb-6 border border-white/10 bg-white/5 backdrop-blur-md rounded-full"
            >
                <span
                    data-i18n="status_available"
                    class="text-xs uppercase tracking-[0.2em] text-indigo-400 font-bold"
                    >Disponible para proyectos</span
                >
            </div>

            <h1
                class="text-6xl md:text-8xl font-black tracking-tighter leading-[0.9]"
            >
                <span
                    data-i18n="name"
                    class="block bg-clip-text text-transparent bg-gradient-to-r from-white via-white to-white/40"
                ></span>
                <span class="block text-indigo-500 mt-2">.</span>
            </h1>

            <p
                data-i18n="role"
                class="mt-8 text-xl md:text-2xl text-gray-400 max-w-lg leading-relaxed font-light"
            >
            </p>

            <div class="mt-10 flex flex-wrap gap-6 items-center">
                <a
                    data-i18n="btn_projects"
                    href="#projects"
                    class="px-8 py-4 bg-white text-black font-bold rounded-full hover:bg-indigo-500 hover:text-white transition-all duration-300 transform hover:scale-105"
                >
                    Ver Proyectos
                </a>

                <nav class="hidden sm:flex gap-4 border-l border-white/10 pl-6">
                    <a
                        href="#skills"
                        data-i18n="nav_skills"
                        class="text-xs uppercase tracking-widest text-gray-500 hover:text-indigo-400 transition-colors"
                        >Habilidades</a
                    >

                    <a
                        href="#experience"
                        data-i18n="nav_experience"
                        class="text-xs uppercase tracking-widest text-gray-500 hover:text-indigo-400 transition-colors"
                        >Experiencia</a
                    >
                    <a
                        href="#education"
                        data-i18n="nav_education"
                        class="text-xs uppercase tracking-widest text-gray-500 hover:text-indigo-400 transition-colors"
                        >Educación</a
                    >
                    <a
                        href="#contact"
                        data-i18n="nav_contact"
                        class="text-xs uppercase tracking-widest text-gray-500 hover:text-indigo-400 transition-colors"
                        >Contacto</a
                    >
                    <a
                        href="#wakatime"
                        data-i18n="nav_wakatime"
                        class="text-xs uppercase tracking-widest text-gray-500 hover:text-indigo-400 transition-colors"
                        >WakaTime</a
                    >
                </nav>
            </div>
        </div>

        <div
            class="relative opacity-0 scale-90 transition-all duration-1000 delay-300 ease-out"
            data-animate
        >
            <div
                class="absolute -top-4 -right-4 w-24 h-24 bg-indigo-500/10 border border-white/10 backdrop-blur-xl rounded-2xl rotate-12 animate-pulse"
            >
            </div>

            <div
                class="relative z-10 w-72 h-72 md:w-[450px] md:h-[450px] mx-auto overflow-hidden rounded-3xl group"
            >
                <img
                    id="intro-mouse-img"
                    src="https://avatars.githubusercontent.com/u/88539815?v=4"
                    alt="Foto"
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-[#030303] via-transparent to-transparent opacity-60"
                >
                </div>
            </div>

            <div
                class="absolute -bottom-6 -left-6 px-6 py-4 bg-white/5 border border-white/10 backdrop-blur-2xl rounded-2xl -rotate-6"
            >
                <p data-i18n="exp_years" class="text-white font-bold text-lg">
                    +3 Años
                </p>
                <p data-i18n="exp_label" class="text-gray-400 text-xs">
                    Experiencia Fullstack
                </p>
            </div>
        </div>
    </div>

    <div
        class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-4 opacity-50"
    >
        <div
            class="w-[1px] h-12 bg-gradient-to-b from-white/0 via-white to-white/0 animate-scroll-line"
        >
        </div>
        <span
            data-i18n="explore"
            class="text-[9px] uppercase tracking-[0.3em] text-white font-bold"
            >Explorar</span
        >
    </div>
</section>
<style>
    @keyframes scroll-line {
        0% {
            transform: scaleY(0);
            transform-origin: top;
            opacity: 0;
        }
        50% {
            transform: scaleY(1);
            transform-origin: top;
            opacity: 1;
        }
        51% {
            transform: scaleY(1);
            transform-origin: bottom;
            opacity: 1;
        }
        100% {
            transform: scaleY(0);
            transform-origin: bottom;
            opacity: 0;
        }
    }
    .animate-scroll-line {
        animation: scroll-line 2.5s cubic-bezier(0.7, 0, 0.3, 1) infinite;
    }

    #intro-mouse-img {
        will-change: transform;
    }
</style>
<script>
    // --- 4. Parallax del Mouse (Foto Intro) ---
    const mouseImg = document.getElementById("intro-mouse-img");
    window.addEventListener("mousemove", (e) => {
        const x = (window.innerWidth / 2 - e.clientX) / 45;
        const y = (window.innerHeight / 2 - e.clientY) / 45;
        if (mouseImg) {
            mouseImg.style.transform = `translate3d(${x}px, ${y}px, 0) scale(1.05)`;
        }
    });
</script>
