<style>
    /* Ocultar barra de scroll y prevenir desbordamiento lateral del body */
    :global(body) {
        overflow-x: hidden;
    }
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>

<script>
    const track = document.getElementById("horizontal-track");
    const bgs = document.querySelectorAll(".project-bg");
    const projectsSection = document.getElementById("projects"); // ID corregido según el HTML

    let isScrollingActive = false;
    let sectionEntryTime = 0;
    const ENTRY_THRESHOLD = 600; 
    const SCROLL_COOLDOWN = 500; 
    let lastScrollTime = 0;

    // Detectar si es un dispositivo táctil
    const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;

    const entryObserver = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    sectionEntryTime = Date.now();
                } else {
                    sectionEntryTime = 0;
                }
            });
        },
        { threshold: 0.5 },
    );

    if (projectsSection) entryObserver.observe(projectsSection);

    function actualizarInterfaz() {
        if (!track) return;

        const index = Math.round(track.scrollLeft / track.clientWidth);
        const projectNumber = document.getElementById("project-number");

        if (projectNumber)
            projectNumber.textContent = (index + 1).toString().padStart(2, "0");

        const dotContainers = document.querySelectorAll(".project-dot-btn");
        dotContainers.forEach((container, i) => {
            const dot = container.querySelector(".dot-indicator");
            if (i === index) {
                dot?.classList.add("bg-white", "scale-150");
                dot?.classList.remove("bg-transparent");
            } else {
                dot?.classList.remove("bg-white", "scale-150");
                dot?.classList.add("bg-transparent");
            }
        });

        bgs.forEach((bg, i) => {
            const animateText = document.querySelectorAll("[data-animate-project]")[i];
            if (i === index) {
                (bg as HTMLElement).style.opacity = "1";
                (bg as HTMLElement).style.transform = "scale(1)";
                if (animateText) animateText.classList.remove("opacity-0", "translate-y-20");
            } else {
                (bg as HTMLElement).style.opacity = "0";
                (bg as HTMLElement).style.transform = "scale(1.1)";
                if (animateText) animateText.classList.add("opacity-0", "translate-y-20");
            }
        });
    }

    // Solo aplicar lógica de rueda de ratón en dispositivos NO táctiles
    if (!isTouchDevice) {
        track?.addEventListener("wheel", (e) => {
            const isAtStart = track.scrollLeft <= 0;
            const maxScroll = track.scrollWidth - track.clientWidth;
            const isAtEnd = track.scrollLeft >= maxScroll - 10;
            const now = Date.now();

            const shouldCapture = (e.deltaY > 0 && !isAtEnd) || (e.deltaY < 0 && !isAtStart);

            if (shouldCapture) {
                e.preventDefault();
                const canStartNav = now - sectionEntryTime > ENTRY_THRESHOLD;
                const canMoveAgain = now - lastScrollTime > SCROLL_COOLDOWN;

                if (!isScrollingActive && canStartNav && canMoveAgain) {
                    isScrollingActive = true;
                    lastScrollTime = now;
                    const direction = e.deltaY > 0 ? 1 : -1;
                    track?.scrollBy({
                        left: direction * track.clientWidth,
                        behavior: "smooth",
                    });
                    setTimeout(() => { isScrollingActive = false; }, 600);
                }
            }
        }, { passive: false });
    }

    // Click en bolitas
    document.querySelectorAll(".project-dot-btn").forEach((dot, i) => {
        dot.addEventListener("click", () => {
            track?.scrollTo({
                left: i * track.clientWidth,
                behavior: "smooth",
            });
        });
    });

    // Listener de scroll con requestAnimationFrame para mejor rendimiento
    let scrollTimeout: number;
    track?.addEventListener("scroll", () => {
        if (scrollTimeout) window.cancelAnimationFrame(scrollTimeout);
        scrollTimeout = window.requestAnimationFrame(actualizarInterfaz);
    }, { passive: true });

    actualizarInterfaz();
</script>