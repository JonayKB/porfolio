---
import "../styles/global.css";
const googleAnalyticsId = import.meta.env.PUBLIC_GOOGLE_ANALYTICS_ID;
---

<html>
    <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>JonayKB | Full Stack Developer Portfolio</title>
    <meta name="description" content="JonayKB's portfolio showcasing web development projects and skills. Developed with Astro. This contains a collection of my work, including websites, applications, and more." />
    <link rel="canonical" href="https://me.jonaykb.com/" />
    <meta name="author" content="Jonay Contreras Rodriguez (JonayKB)" />
    <meta name="publish_date" content="2026-01-20T00:00:00-0600" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://me.jonaykb.com/" />
    <meta property="og:description" content="Explore my web development projects and skills." />
    <meta property="og:title" content="JonayKB | Full Stack Developer" />
    <meta property="og:image" content="https://me.jonaykb.com/og-image.png" />
    <meta property="og:image:width" content="1331" />
    <meta property="og:image:height" content="495" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://me.jonaykb.com/" />
    <meta property="twitter:title" content="JonayKB | Full Stack Developer" />
    <meta property="twitter:description" content="Explore my web development projects and skills." />
    <meta name="twitter:image" content="https://me.jonaykb.com/og-image.png" />

    {googleAnalyticsId && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${googleAnalyticsId}`}></script>
        <script is:inline define:vars={{ googleAnalyticsId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){ dataLayer.push(arguments); }
          window.gtag = gtag;
          gtag('js', new Date());
          gtag('config', googleAnalyticsId);
        </script>
      </>
    )}
</head>
    <body>
        
        <slot />
    </body>
</html>
